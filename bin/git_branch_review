# Useful tool for cleaning up local branches. Will prompt user for branch removal.

cwd=`pwd`

if [ ! -d ".git" ]; then
  echo "Current working directory (${cwd}) is not a git repository."
  exit -1
fi

confirm () {
  # call with a prompt string or use a default
  read -r -p "${1:-Are you sure? [y/N]} " response </dev/tty
  case $response in
    [yY][eE][sS]|[yY]) 
      true
      ;;
    *)
      false
      ;;
  esac
}

branches=`git branch`

while read -r branch; do
  if [[ "$branch" =~ ^\*.* ]]; then
    echo "Ignoring current branch \"$branch\"..."
    continue
  fi
  confirm "Delete local branch \"${branch}\"?" && git branch -D "${branch}"
done <<< "$branches"
