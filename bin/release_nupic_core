import sys
import os
import subprocess

from releasetools import Release

# Files that will be modified.
DOXYFILE = "Doxyfile"


class NupicCoreRelease(Release):

  
  def commitRelease(self):
    super(NupicCoreRelease, self).commitRelease()
    self.releaseSha = subprocess.check_output(
      "git rev-parse HEAD", shell=True
    ).strip()


  def getReleaseSha(self):
    return self.releaseSha


if __name__ == "__main__":
  
  if "NUPIC_CORE" not in os.environ:
    print("Set the NUPIC_CORE environment variable.")
    exit(-1)
  
  release = NupicCoreRelease(
    sys.argv[1:], 
    os.environ["NUPIC_CORE"],
    DOXYFILE
  )

  release.check()
  release.release()
  
  print release.getReleaseSha()
